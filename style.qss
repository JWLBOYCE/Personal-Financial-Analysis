/* Global application style resembling Apple Numbers */

/* Light grey background for widgets */
QWidget {
    background: #f9f9f9;
    color: #111;
}

/* Rounded group boxes */
QGroupBox {
    border: 1px solid #cccccc;
    border-radius: 8px;
    margin-top: 16px;
    padding: 8px;
}
QGroupBox::title {
    subcontrol-origin: margin;
    left: 10px;
    padding: 0 4px;
}

/* Table header styling */
QHeaderView::section {
    font-weight: bold;
    color: #111;
    background: #eaeaea;
    padding: 4px;
    border: 1px solid #d0d0d0;
}

/* Table styling */
QTableWidget {
    gridline-color: #d0d0d0;
    alternating-row-colors: true;
    background: #ffffff;
    alternate-background-color: #f2f2f2;
    color: #111;
}

/* Hover and selection highlighting for table rows */
QTableWidget::item:hover {
    background: #d7ebff;
}

QTableWidget::item:selected {
    background: #aad4ff;
}

QTableWidget QTableCornerButton::section {
    border: 1px solid #d0d0d0;
    background: #eaeaea;
}

/* Dark text for tabs */
QTabBar::tab {
    color: #111;
}
